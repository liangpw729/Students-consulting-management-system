<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/consult_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <include layout="@layout/consult_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/consult_classify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/consult_title">

        <include layout="@layout/consult_classify" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/common_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/consult_classify">

        <include layout="@layout/experts_common_question" />
    </LinearLayout>

</RelativeLayout>
